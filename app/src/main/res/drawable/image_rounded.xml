    <item>
        <shape android:shape="rectangle">
            <solid android:color="#41808080"/>
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"

        android:bottom="2dp">
